rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is the admin (logged in)
    function isAuthenticated() {
      return request.auth != null;
    }

    // =========================================================
    // 1. PUBLIC CONTENT (Videos, Materials, Profile)
    // =========================================================
    // Students/Guests can READ these.
    // Only Admin can SHARE (create/update/delete).

    match /videos/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /materials/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // =========================================================
    // 2. CONTACT MESSAGES
    // =========================================================
    // Students/Guests can SEND (create) messages.
    // They CANNOT read what others sent.
    // Only Admin can READ or DELETE messages.

    match /contacts/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }

    // =========================================================
    // 3. DEFAULT SAFETY
    // =========================================================
    // Block all other access by default
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
