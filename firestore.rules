rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write profile
    match /settings/profile {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write site content
    match /settings/siteContent {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Videos - public read, authenticated write
    match /videos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Materials - public read, authenticated write
    match /materials/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contacts - public write, authenticated read
    match /contacts/{document=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }
  }
}
